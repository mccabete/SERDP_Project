issn = {21508925},
journal = {Ecosphere},
keywords = {Light detection and ranging (LiDAR),Overstory-derived fuels,Pinus palustris,Prescribed fire,Species richness,Structural equation model.,fire,fuel type},
mendeley-tags = {fire,fuel type},
number = {10},
pages = {e01964},
title = {{Overstory-derived surface fuels mediate plant species diversity in frequently burned longleaf pine forests}},
