journal = {Journal of Applied Ecology},
keywords = {Eastern deciduous forest,Fire behaviour,Fire intensity,Flame height,Forest succession,Microstegium vimineum,Prescribed fire,Stiltgrass,fire,invasion ecology,longleaf pine,microstegium},
mendeley-tags = {fire,invasion ecology,longleaf pine,microstegium},
